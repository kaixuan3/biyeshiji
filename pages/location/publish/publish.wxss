page {
  background-color: #f7f7f7;
}
.list {
  display: flex;
  flex-direction: column;
  background-color: white;
}
.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: center;
  margin-left: 10px;
  border-bottom: 2rpx solid #e3e3e3;
  /* height: 80rpx; */
  padding-top: 10px;
  padding-bottom: 10px;
}
.item-left {
  font-size: 30rpx;
  color: #333333;
  display: flex;
  flex-direction: row;
}
.item-right {
  margin-left: 10px;
  font-size: 30rpx;
  color: #333333;
  text-align: left;
  display: flex;
  flex-direction: row;
  max-height: 50px;
}

.publish {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: rgb(66, 214, 52);
}
.publish-text {
  font-size: 30rpx;
  font-weight: 600;
  color: white;
}