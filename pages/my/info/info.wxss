page {
  background-color: #ebf8ff;
}
.nav {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 300rpx;
}
.top{
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  margin-bottom: 10rpx;
}
.nickname{
  margin-top: 10rpx;

}
.item{
  height: 70rpx;
  background-color: #fff;
  margin: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  border-radius: 20rpx;
}
.left{
  display: flex;
  align-items: center;
  width: 30%;
  font-size: 30rpx;
  color: #333333;
  margin-left: 10rpx;
}
.right{
  display: flex;
  align-items: center;
  /* justify-content: flex-end; */
  text-align: right;
  font-size: 30rpx;
  color: #666666;
  margin-right: 10rpx;
  width: 60%;
}
.right-picker {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  text-align: right;
  font-size: 30rpx;
  color: #666666;
  margin-right: 10rpx;
  width: 60%;
}
.right-view {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  text-align: right;
  font-size: 30rpx;
  color: #666666;
  margin-right: 10rpx;
  width: 100%;
}
.submit {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background: #0cf;
  color: #fff;
}