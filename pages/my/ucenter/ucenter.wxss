
.tousu {
  width: 100%;
  height: 50px;
  background-color: rgba(219, 115, 115, 0.281);
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
.tousu-view {
  height: 50px;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
.tousu-img {
  width: 20px;
  height: 20px;
  margin-right: 20rpx;
}
.tous-text {
  font-size: 30rpx;
  color: #333333;
  margin-right: 20rpx;
}
.header {
  width: 100%;
  height: 150px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: rgba(219, 115, 115, 0.281);
}
.header-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-bottom: 20rpx;
}
.header-name {
  font-size: 30rpx;
  color: #333333;
}
.header-class {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #333333;
}
.header-class-btn {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: white;
  width: 180rpx;
  height: 50rpx;
  border-radius: 20rpx;
  border: 2rpx solid greenyellow;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.loginBtn {
  width: 200rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: whitesmoke;
  border: 2rpx solid greenyellow;
}

.content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-left: 8px;
  padding-right: 8px;
}
.content-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 10px;
  border-radius: 10rpx;
  border: 2rpx solid #efefef;
}
.content-item-img {
  margin-bottom: 10rpx;
}
.content-item-text {
  margin-top: 10rpx;
  font-size: 32rpx;
  color: #333333;
}