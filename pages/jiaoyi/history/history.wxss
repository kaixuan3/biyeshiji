.list {
  display: flex;
  flex-direction: column;
}
.item {
  margin-top: 20rpx;
  padding-left: 10px;
  padding-right: 10px;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e3e3e3;
}
.item-top {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}
.item-left {
  width: 60px;
  height: 60px;
  margin-right: 5px;
}
.item-right {
  margin-left: 5px;
  display: flex;
  height: 60px;
  flex-direction: column;
  justify-content: space-around;
}
.item-right-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.item-right-top-left {
  font-size: 30rpx;
  color: #333333;
}
.item-right-top-right {
  font-size: 26rpx;
  color: #666666;
}
.item-right-bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.item-right-bottom-left {
  font-size: 28rpx;
  color: #666666;
}
.item-right-bottom-right {
  font-size: 28rpx;
  color: #666666;
}
.item-bottom {
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
}

.publish {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: rgb(66, 214, 52);
}
.publish-text {
  font-size: 30rpx;
  font-weight: 600;
  color: white;
}