
.top {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}
.top-left {
  width: 80px;
  height: 80px;
  margin-left: 10px;
}
.top-left-img {
  width: 100%;
  height: 100%;
}
.top-right {
  margin-left: 10px;
  margin-right: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.top-right-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.top-right-top-left {
  font-size: 30rpx;
  color: #333333;
}
.top-right-top-right {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.top-right-top-right-img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.top-right-top-right-text {
  font-size: 30rpx;
  color: #d81e06;
}
.top-right-bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.top-right-bottom-left {
  font-size: 30rpx;
  color: #333333;
}
.top-right-bottom-right {
  font-size: 30rpx;
  color: #333333;
}
.top-right-text {
  font-size: 30rpx;
  color: #333333;
}
.middle {
  margin-top: 20rpx;
  margin-left: 10px;
  margin-right: 10px;
  display: flex;
  flex-direction: column;
}
.middle-top {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.middle-top-left {
  font-size: 28rpx;
  color: #333333;
}
.middle-top-right {
  font-size: 28rpx;
  color: #333333;
}
.middle-top-right text {
  text-decoration:underline;
}
.middle-middle {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #666666;
}
.middle-bottom {
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #666666;
}
.middle-bottom-top {
  margin-bottom: 10rpx;
  color: #333333;
}
.bottom {
  margin-top: 20rpx;
  margin-left: 10px;
  margin-right: 10px;
  display: flex;
  flex-direction: column;
}
.bottom-top {
  font-size: 30rpx;
  color: #333333;
}
.bottom-bottom {
  font-size: 28rpx;
  color: #666666;
}

.bottom-item {
  display: flex;
  flex-direction: column;
  border-bottom: 2rpx solid #e3e3e3;
}
.item-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}
.item-top-left {
  font-size: 30rpx;
  color: #333333;
}
.item-top-right {
  font-size: 30rpx;
  color: #333333;
}
.item-bottom {
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #333333;
  margin-bottom: 20rpx;
}
.bottom-text{
  font-size: 30rpx;
  color: #666666;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}


.replyList {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}
.reply-title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.reply-title-left {
  font-size: 30rpx;
  font-weight: 600;
  color: #333333;
}
.reply-title-right {
  font-size: 26rpx;
  color: #333333;
  width: 100rpx;
  height: 50rpx;
  border-radius: 25rpx;
  border: 2rpx solid #e3e3e3;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.replyList-item {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 10rpx;
  border-bottom: 2rpx solid #e3e3e3;
}
.replyList-name {
  font-size: 30rpx;
  color: black;
  margin-left: 10rpx;
}
.replyList-content {
  margin-top: 5rpx;
  font-size: 28rpx;
  color: #333333;
  margin-left: 20rpx;
}
.replyList-time {
  margin-top: 5rpx;
  font-size: 26rpx;
  color: #666666;
  margin-left: 10rpx;
}

.publish {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: rgb(66, 214, 52);
}
.publish-text {
  font-size: 30rpx;
  font-weight: 600;
  color: white;
}